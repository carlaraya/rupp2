<section class="hero is-large is-primary">
    <div class="hero-body">
	<div class="container">
	    <div class="columns">
		<div class="column is-half is-centered" style= "margin: auto;">
		    <div class="notification is-white">
			<h1 class = "title has-text-centered has-text-black">Rate your UP Professors</h1>
			<h2 class = "subtitle has-text-centered has-text-black">Search for professors here</h2>
			<%= form_for "", method: :get do |f| %>
			    <p class = "control has-icons-left">
				<%= f.text_field :search, class: "input is-medium", placeholder: "Search" %>
				<span class="icon is-small is-left">
				    <%= fa_icon "search" %>
				</span>
			    </p>
		    </div>
		</div>
	    </div>
	</div>
    </div>

<% end %>
</section>
