<section class="section has-background-light">
    <div class="container">
	<div class="box">
	    <%= form_for "", method: :get, local: true do |f| %>
		<div class="field has-addons">
		<div class = "control has-icons-left is-expanded">
		    <%= f.text_field :q, class: "input is-medium", placeholder: "Search For Professors" %>
		    <span class="icon is-small is-left">
			<%= fa_icon "search" %>
		    </span>
		</div>
		<div class="control">
		    <%= f.submit "Search", class: "button is-info is-medium" %>
		</div>
		</div>
	    <% end %>

	</div>
	<%= render @professors %>

    </div>
</section>
